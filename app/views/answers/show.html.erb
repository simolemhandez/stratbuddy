
  <div class="title-box">
    <h1 class="title"> Case nÂ°<%= @question.case.position  %>:  <%= @question.case.name %> </h1>

  </div>

  <div class="container">
    <h2> Question nÂ°<%= @question.position  %>: <%= @question.content %></h2>
    <p class="question-answer"> <strong>Your answer: </strong> <%= @answer.content %></p>
    <p class="question-correction"> <strong> Correction:</strong> <%= @question.correction %></p>
  </div>

  <div class="container">

    <p class="correctness"> <strong> <%= @answer.correctness %> </strong> </p>

    <p> <strong> What are other best candidates 5 best answers? ðŸ™Œ </strong></p>

    <% @answers.all.order('votes DESC').first(5).each do |answer| %>
      <div class="notification">
      <%= cl_image_tag answer.attempt.user.photo, width: 150, height: 150, crop: :thumb, gravity: :face, class: "avatar dropdown-toggle" %>
        <div class="notification-content">
          <p class="answer-content"> <strong> <%= answer.attempt.user.first_name %>: </strong> <%=  answer.content %>  </p>
        </div>
        <div class="notification-actions">
          <p><%= link_to '<i class="far fa-thumbs-up"></i>'.html_safe, "#" %></p>
          <% if  answer.votes.nil? %>
            <p> 0 votes </p>
          <% else %>
            <p><%= answer.votes %> votes </p>
          <% end %>
        </div>
      </div>
    <% end %>


    <% if @next_question.nil? %>
      <%= link_to "View my score", case_questions_path(@question.case), class: "btn btn-flat btn-answer" %>
    <% else %>
      <%= link_to "Next question", question_path(@next_question), class: "btn btn-flat btn-answer" %>
    <% end %>

  </div>




