    <% if @user.photo.url.nil? %>
      <%=  image_tag "avatar.png", width: 150, height: 150, class: "avatar dropdown-toggle", style: "background: white" %>
    <% else %>
      <%= cl_image_tag @user.photo, width: 150, height: 150, crop: :thumb, gravity: :face, class: "avatar dropdown-toggle" %>
    <% end %>


        <div class="notification-content">
          <p class="answer-content"> <strong> <%= answer.attempt.user.first_name %>: </strong> <%=  answer.content.gsub(/\n/,'<br>').html_safe %>  </p>
        </div>
        <div class="notification-actions">
          <p><%= link_to '<i class="far fa-thumbs-up"></i>'.html_safe, voting_path(answer) %></p>
            <p><%= answer.votes %> votes </p>
        </div>
      </div>
    <% end %>
    <br>

    <% if @next_question.nil? %>
      <%= link_to "View my score", case_questions_path(@question.case), class: "btn btn-flat btn-answer" %>
    <% else %>
      <%= link_to "Next question", question_path(@next_question), class: "btn btn-flat btn-answer" %>
