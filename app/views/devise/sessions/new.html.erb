

    <div class=" container form-login col-xs-12 col-sm-4 col-sm-offset-4 container-sign">

      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, placeholder: "bob@gmail.com" %>
          <%= f.input :password, required: false, placeholder: "••••••" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-flat" %>
        </div>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>


