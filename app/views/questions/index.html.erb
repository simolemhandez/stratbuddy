
<div class="trianglify-twisted">
  <div class="title-box">
    <div>
      <%= link_to '<i class="fas fa-chevron-circle-left"></i>'.html_safe, cases_path, class: "back"  %>
    </div>
    <h1> <%= @questionstothiscase.first.case.name %> </h1>

     <div class="score-card">
      <div class="score-card-content">
        <i class="fas fa-trophy"></i>
      <p>  Your score to this test: <%= @questionstothiscase.first.case.attempts.last.score %> / <%= @questionstothiscase.length.to_i * 3  %> </p>
         <div class="score-bar blue stripes score-card-questions">
          <span style="width: <%= @questionstothiscase.first.case.attempts.last.score.to_i.fdiv(@questionstothiscase.length.to_i * 3) * 100 %>%"></span>
        </div>
        </div>
      </div>
  </div>


  <div class="container-short container container-question">
    <h2>Final correction</h2>
    <H6> <strong> <em> <%=  @questionstothiscase.first.case.content %> </em></strong></h6>
  </div>

  <div class="container-short container container-question">
    <% @questionstothiscase.each do  |question| %>
      <h6>
       <strong> <%= question.position %>. <%= question.content %></strong>
      </h6>
        <% if question.answer_ids.last.nil? %>
        <% elsif %>
          <p class="question-answer"> <%= Answer.find(question.answer_ids.last).content %></p>
        <% end %>
       <p class="question-correction"> <%= question.correction %></p>
    <% end %>
  </div>
</div>


