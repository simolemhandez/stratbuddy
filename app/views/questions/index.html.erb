<h1> <%= link_to @questions.first.case.name, case_path(@questions.first.case) %> </h1>
<p> <strong> Your overall score: <%=  current_user.score %> </strong></p>
<p> <strong> Your score to this test: <%= @case_score %> / <%= @questions.length  %> </strong></p>
<% raise %>

<p> <strong> <%=  @questions.first.case.content %> </strong></p>

<% @questions.each do  |question| %>
  <p>
   <strong> <%= question.position %>. <%= question.content %></strong>
  </p>
   <p div="question-answer"> <%= Answer.find(question.answer_ids.last).content %></p>
   <p div="question-correction"> <%= question.correction %></p>
<% end %>
